<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:CloudOS"
             xmlns:vm="clr-namespace:CloudOS.ViewModels"
             x:Class="CloudOS.MainPage">

    <ContentPage.BindingContext>
        <vm:MainViewModel/>
    </ContentPage.BindingContext>
    <ContentPage.Resources>
        <ResourceDictionary>
            <Style TargetType="VerticalStackLayout" x:Key="displayWindow">
                <Setter Property="BackgroundColor" Value="#DBD8D8"/>
            </Style>
            <Style TargetType="Label" x:Key="subheader">
                <Setter Property="FontSize" Value="Medium"/>
                <Setter Property="FontAttributes" Value="Bold"/>
                <Setter Property="TextDecorations" Value="Underline"/>
                <Setter Property="HorizontalOptions" Value="Center"/>
                <Setter Property="VerticalOptions" Value="Center"/>
            </Style>
        </ResourceDictionary>
    </ContentPage.Resources>

    <StackLayout BackgroundColor="Black" Padding="10" Spacing="25" >
        <Frame BackgroundColor="#676767" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" >
            <Grid ColumnDefinitions="1.75*, *, *" RowDefinitions=".1*, .1*, .1*, *" ColumnSpacing="20" RowSpacing="5">

                <Label Text="CLOUD OS SECURITY" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0"
                       FontSize="Header" HorizontalTextAlignment="Center" VerticalTextAlignment="Center"/>
                <BoxView Grid.Row="1" Grid.ColumnSpan="3" HeightRequest="2"  BackgroundColor="Black"/>

                <Label Text="ADMIN" Grid.Row="2" Grid.Column="0" Style="{StaticResource subheader}"/>
                <ScrollView x:Name="scrollView" Grid.Row="3" Grid.Column="0" >
                    <VerticalStackLayout PropertyChanged="Layout_PropertyChanged" Style="{StaticResource displayWindow}">
                        <local:AdminView x:Name="admin"/>
                    </VerticalStackLayout>
                </ScrollView>

                <Label Text="Tenant 1" Grid.Row="2" Grid.Column="1" Style="{StaticResource subheader}"/>
                <ScrollView Grid.Row="3" Grid.Column="1">
                    <VerticalStackLayout Style="{StaticResource displayWindow}">
                        <local:TenantView BindingContext="{Binding Tenant1}"/>
                    </VerticalStackLayout>
                </ScrollView>

                <Label Text="Tenant 2" Grid.Row="2" Grid.Column="2" Style="{StaticResource subheader}"/>
                <ScrollView Grid.Row="3" Grid.Column="2">
                    <VerticalStackLayout Style="{StaticResource displayWindow}">
                        <local:TenantView BindingContext="{Binding Tenant2}"/>
                    </VerticalStackLayout>
                </ScrollView>
            </Grid>
        </Frame>

    </StackLayout>

</ContentPage>
